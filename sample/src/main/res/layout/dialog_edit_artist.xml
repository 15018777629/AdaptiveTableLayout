<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="42dp"
    android:layout_marginLeft="42dp"
    android:layout_marginRight="42dp"
    android:layout_marginStart="42dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3sp"
    app:contentPadding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_artist"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/svEditFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_marginTop="10dp">


            <LinearLayout
                android:id="@+id/llEditFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/name"
                        android:inputType="text"
                        android:maxLength="50" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etPhotoUrl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/photo_url"
                        android:inputType="textUri" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/etSong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/song"
                        android:inputType="text"
                        android:maxLength="50" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/genres"
                    android:textColor="@android:color/black" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow>

                        <CheckBox
                            android:id="@+id/cbRock"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/rock" />

                        <CheckBox
                            android:id="@+id/cbRandB"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/r_and_b" />
                    </TableRow>

                    <TableRow>

                        <CheckBox
                            android:id="@+id/cbPop"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/pop" />

                        <CheckBox
                            android:id="@+id/cbJazz"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/jazz" />
                    </TableRow>

                    <TableRow>

                        <CheckBox
                            android:id="@+id/cbHipHop"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/hip_hop" />

                        <CheckBox
                            android:id="@+id/cbElectronic"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/electronic" />
                    </TableRow>

                    <TableRow>

                        <CheckBox
                            android:id="@+id/cbBlues"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/blues" />

                        <CheckBox
                            android:id="@+id/cbCountry"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/country" />
                    </TableRow>


                    <TableRow
                        android:layout_marginTop="20dp"
                        android:gravity="end">

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/bNegative"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:text="@string/cancel"
                            android:textColor="@color/colorAccent" />


                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/bPositive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:text="@string/ok"
                            android:textColor="@color/colorAccent" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</android.support.v7.widget.CardView>

